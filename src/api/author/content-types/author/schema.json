        "Sr. Chief Editor"
      ]
    },
    "order": {
      "type": "integer"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "news": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-list.news-list",
      "mappedBy": "author"
    }
  }
